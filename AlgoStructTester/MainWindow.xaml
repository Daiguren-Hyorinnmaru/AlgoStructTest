<Window x:Class="AlgoStructTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgoStructTester"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="790">
    <Grid Margin="10,10,10,10">
        <Button Content="Sort start" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Sort_Click" Margin="20,17,0,0"/>
        <Button Content="Pathfinding start" Width="130" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Pathfinding_Click" Margin="140,17,0,0"/>
        <Button Content="Start all" HorizontalAlignment="Right" Margin="0,17,20,0" VerticalAlignment="Top" Click="StartAll"/>

        <TabControl x:Name="MainTabControl" Margin="0,47,0,0" />
    </Grid>
</Window>
